// -*- mode: jsonc -*-
{
    "position": "top", // "top", "bottom", "left", "right"
    "height": 30,
    "spacing": 2,
    "modules-left": [
        "clock",
        "hyprland/mode",
        "hyprland/scratchpad",
        "custom/media",
        "wlr/taskbar",
        "tray"
    ],
    "modules-center": [
        "hyprland/workspaces",
        "group/group-system",
        "sway/window"
    ],
    "modules-right": [
        "custom/docker",
        "bluetooth",
        "mpd",
        "idle_inhibitor",
        "pulseaudio",
        "network",
        "battery",
        "custom/power"
    ],
    "wlr/taskbar": {
        "all-outputs": true,
        "format": "{icon}",
        "on-click": "activate",
        "on-click-right": "close",
        "on-scroll-up": "scroll-up",
        "on-scroll-down": "scroll-down",
        "tooltip-format": "{app}: {title}",
        "tooltip": true
    },
    "hyprland/workspaces": {
        "on-click": "activate",
        "format": "{icon}",
        "persistent-workspaces": {
            "1": []
        }
    },
    "bluetooth": {
        "format": "Ôäî",
        "format-disabled": "Û∞Ç≤",
        "format-connected": "Ôäî{num_connections}",
        "tooltip-format": "Devices connected: {num_connections}",
        "on-click": "GTK_THEME=Adwaita-dark blueman-manager"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "hyprland/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": [
            "",
            "Ôãí"
        ],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
        "format-disconnected": "Disconnected ÔÄÅ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": "ÔÉÑ "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
            "on": "ÔÅ¥ "
        },
        "repeat-icons": {
            "on": "ÔÄû "
        },
        "single-icons": {
            "on": "ÔÄû1 "
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        // "icon-size": 24,
        "spacing": 5
        // "icons": {
        //   "blueman": "bluetooth",
        //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
        // }
    },
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%d/%m %H:%M}"
    },
    "cpu": {
        "format": "CPU {usage}%",
        "tooltip": false,
        "on-click": "alacritty -e btop"
    },
    "memory": {
        "format": "RAM {}%"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C",
        "on-click": "alacritty -e btop"
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": [
            "Óéç",
            "Óèì",
            "Óèë",
            "Óèè",
            "Óèé",
            "Óèç",
            "Óèä",
            "Óèà",
            "Óéõ"
        ]
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Û±ä•",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{frequency}GHz {signalStrength}% Ôá´",
        "format-ethernet": "{ipaddr}/{cidr} ÔÇ¨",
        "tooltip-format": "{essid} via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Disconnected ‚ö†",
        "on-click": "kitty -e nmtui"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Û∞ñÅ {icon}Ôäî {format_source}",
        "format-muted": "Û∞ñÅ {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Û∞ãã",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "on-click": "kitty -e pulsemixer"
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format": "‚èª",
        "tooltip": false,
        "on-click": "wlogout"
    },
    "custom/docker": {
        "format": "Ôåà {}",
        "exec": "$HOME/scripts/docker_running_contains_count.sh",
        "interval": 120,
        "tooltip": true,
        "tooltip-format": "Containers em execu√ß√£o: {}",
        "on-click": "kitty -e lazydocker",
        "on-click-right": "/bin/bash -c $HOME/scripts/docker_stop_running_containers.sh"
    },
    "group/group-system": {
        "orientation": "inherit",
        "modules": [
            "power-profiles-daemon",
            "cpu",
            "memory",
            "temperature",
            "load",
            "custom/uptime"
        ]
    },
    "load": {
        "format": "{load1}/{load5}/{load15}"
    },
    "custom/uptime": {
        "format": "Uptime: {}",
        "exec": "uptime | awk '{print $3, $4, $5}' | sed 's/,$//'",
        "interval": 5
    }
}
}
